{
   "application": {
        "uiDefinition": {
            "tabs": [{
                "id": "ConfigFileAppDetail",
                "label": "Config File",
                "fields": [{
                    "type": "RADIO",
                    "field": "location",
                    "label": "Location of config file",
                    "value": "local",
                    "values": [{
                         "label": "Remote UNIX",
                         "value": "remoteUNIX"
                    	},{
                         "label": "Remote Windows",
                         "value": "remoteWindows"
                        },{
                         "label": "Local TCF",
                         "value": "local"
                    	}
                    ]
                }, {
                    "type": "NUMBER",
                    "field": "port",
                    "label": "Port (for Remote UNIX)",
                    "required": false,
                    "minValue": 0,
                    "maxValue": 65535,
                    "value": 22
                }]

            }]
        }
    },

    "account": {
        "uiDefinition": {
            "tabs": [{
                "id": "ConfigFileAccDetail",
                "label": "Config File",
                "fields": [{
                    "type": "TARGETACCOUNT",
					"field": "loginAccount",
					"label": "Login account to remote server",
					"required": false
	            }, {
                    "type": "TEXT",
                    "field": "filename",
                    "label": "Config file (path+) filename",
                    "required": true,
                    "maxLength": 120,
                    "value": "/tmp/config.txt"
            	}, {
                    "type": "CHECKBOX",
                    "field": "createBackup",
                    "label": "Create backup file",
                    "value": true
                }, {
                    "type": "CHECKBOX",
                    "field": "useRegex",
                    "label": "Use Regex for verify/update",
                    "value": false
                }, {
                    "type": "TEXT",
                    "field": "verifyRegex",
                    "label": "Verify regex",
                    "value": "username\\s*=\\s*\"$USERNAME$\"\\s+password\\s*=\\s*\"$PASSWORD$\"",
                    "required": false,
                    "maxLength": 120
                }, {
                    "type": "TEXT",
                    "field": "searchRegex",
                    "label": "Update regex (search)",
                    "value" : "(username\\s*=\\s*\"$USERNAME$\"\\s+password\\s*=\\s*\").*?(\")",
                    "required": false,
                    "maxLength": 120
                }, {
                    "type": "TEXT",
                    "field": "replaceRegex",
                    "label": "Update regex (replace)",
                    "value": "$1$PASSWORD$$2",
                    "required": false,
                    "maxLength": 120
                }]
            }]
        }
    }
 }
